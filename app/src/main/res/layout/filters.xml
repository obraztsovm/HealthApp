<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/filterChipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:singleSelection="true"
        app:selectionRequired="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Все"
            app:chipBackgroundColor="@color/chip_selector"
            app:checkedIconVisible="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipBloodTests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Анализы"
            app:chipBackgroundColor="@color/chip_selector"
            app:checkedIconVisible="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipVitamins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Витамины"
            app:chipBackgroundColor="@color/chip_selector"
            app:checkedIconVisible="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipHormones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Гормоны"
            app:chipBackgroundColor="@color/chip_selector"
            app:checkedIconVisible="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipBodyMetrics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тело"
            app:chipBackgroundColor="@color/chip_selector"
            app:checkedIconVisible="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipDoctors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Врачи"
            app:chipBackgroundColor="@color/chip_selector"
            app:checkedIconVisible="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipVaccinations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Прививки"
            app:chipBackgroundColor="@color/chip_selector"
            app:checkedIconVisible="false" />

    </com.google.android.material.chip.ChipGroup>

</LinearLayout>