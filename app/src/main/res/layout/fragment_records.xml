<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/light_gray">

    <!-- Заголовок -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="История измерений"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="16dp" />

    <!-- Фильтры ChipGroup -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/filterChipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:singleSelection="true"
        app:selectionRequired="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Все"
            style="@style/Widget.Material3.Chip.Filter"
            app:chipBackgroundColor="@color/chip_color_selector"
            app:checkedIcon="@null" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Давление"
            style="@style/Widget.Material3.Chip.Filter"
            app:chipBackgroundColor="@color/chip_color_selector"
            app:checkedIcon="@null" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPulse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пульс"
            style="@style/Widget.Material3.Chip.Filter"
            app:chipBackgroundColor="@color/chip_color_selector"
            app:checkedIcon="@null" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipVaccination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Прививки"
            style="@style/Widget.Material3.Chip.Filter"
            app:chipBackgroundColor="@color/chip_color_selector"
            app:checkedIcon="@null" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Температура"
            style="@style/Widget.Material3.Chip.Filter"
            app:chipBackgroundColor="@color/chip_color_selector"
            app:checkedIcon="@null" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вес"
            style="@style/Widget.Material3.Chip.Filter"
            app:chipBackgroundColor="@color/chip_color_selector"
            app:checkedIcon="@null" />

    </com.google.android.material.chip.ChipGroup>

    <!-- Список -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recordsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent" />

    <!-- Кнопка добавления -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/addRecordButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить запись"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        android:layout_marginTop="16dp"
        app:backgroundTint="@color/cobalt_blue" />

    <!-- Статистика -->
    <TextView
        android:id="@+id/statsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Показано записей: 0"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginTop="12dp" />

</LinearLayout>